<Application
    x:Class="App1.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    
    xmlns:System="using:System">

    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="RoyalBlue" />
        <SolidColorBrush x:Key="ThemeColor1" Color="LightGray" />
        <SolidColorBrush x:Key="ThemeColor2" Color="RoyalBlue" />

        <System:Int32 x:Key="LeftMargin">10</System:Int32>
        
    </Application.Resources>
    
</Application>

